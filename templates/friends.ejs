<!DOCTYPE html>
<html>
  <head>
      <%- include('./_blocks/head', { siteTitle: themeConfig.siteName }) %>
  </head>
  <body>
    <div class="head-top-line"></div>
    <div class="header-box">
      <%- include('./_blocks/header', {active: true, menu: 'home', link: '/friends'}) %>
    </div>
    <div class="main-continer">
      <% let scheme = site.customConfig.scheme; %>
      <div class="section-layout <%= scheme !==''?scheme:'pisces' %> <%= scheme === 'muse' || scheme === 'mist' ?'bg-color':'' %>">
        <div class="section-layout-wrapper">
          <%- include('./_blocks/home-sidebar') %>
          <div class="section-box <%= scheme !==''?scheme:'pisces' %>">
            <section class="section tags-section bg-color posts-expand slide-down-in">
              <div class="firends-box">
                <% for (let i = 0; i < site.customConfig.friends.length; i++) {%>
                  <% let avator = site.customConfig.friends[i].siteAvator;%>
                  <a href="<%= site.customConfig.friends[i].siteLink %>"></a>
                    <p>
                      <% if(avator === '') { %>
                        <img src="<%= site.customConfig.friends[i].siteLink %>/favicon.ico"/>
                      <% } else { %>
                        <img src="<%= avator %>"/>
                      <% } %>
                      <div class="right">
                        <%= site.customConfig.friends[i].siteName %>
                        <%= site.customConfig.friends[i].siteDesc %>
                      </div>
                    </p>
                  </a>
                <% } %>
              </div>
            </section>
          </div>
        </div>
      </div>
      <%- include('./_blocks/footer') %>
    </div>
  </body>
  <%- include('./_blocks/after-body') %>
</html>